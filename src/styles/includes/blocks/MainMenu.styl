.MainMenu
	&_menu
		display flex
		flex-wrap wrap
	
	&_item
		flex 0 0 25%

		@media $xs
			flex 0 0 33.33%
		
		@media $xxs
			flex 0 0 50%
	
	&_link
		font-size 18px
		line-height 3.33
		text-transform uppercase
		color $green2
		@extend .transition

		@media $mdMinus
			font-size 16px
			line-height 2.6
		
		@media $smMinus
			font-size 14px
			line-height 2.4
		
		@media $xs
			font-size 13px
		
		@media $xxs
			font-size 12px
			line-height 2.2

		&:hover, &-active
			color $white