.BtnPrimary
	display inline-flex
	align-items center
	padding 0.87em 2.6em 1.14em 3em
	border none
	outline none
	-webkit-border-radius 28px
	border-radius 28px
	font-weight 600
	font-size 15px
	line-height normal
	background -webkit-linear-gradient(90deg, #95d600, #c6d721)
	background -o-linear-gradient(90deg, #95d600, #c6d721)
	background linear-gradient(90deg, #95d600, #c6d721)
	color $white

	& > .SvgIco
		width 24px
		margin-top 7px
		margin-left 48px

	@media $smMinus
		font-size 14px

	@media $xxs
		font-size 13px
	
	&:hover
		background -webkit-linear-gradient(90deg, #95d600, #95d600)
		background -o-linear-gradient(90deg, #95d600, #95d600)
		background linear-gradient(90deg, #95d600, #95d600)
	
	&-basket
		padding 0.4em 1.8em 0.4em 2.34em
	
	&-form
		padding-right 62px
		padding-left 68px