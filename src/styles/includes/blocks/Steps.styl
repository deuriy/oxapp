.Steps
	display flex
	align-items center

	&_item
		position relative
		display inline-flex
		justify-content center
		align-items center
		width 32px
		height 32px
		margin-right 83px
		border 1px solid #bec6c9
		border-radius 50%
		font-size 12px
		color #bec6c9

		&:after
			content ''
			position absolute
			top 0
			right -74px
			bottom 0
			width 66px
			height 1px
			margin auto
			background url('../img/steps_line.png') 0 0 no-repeat

		&:last-child
			margin-right 0

			&:after
				display none

		&-green
			border-color #72c45f
			background #72c45f
			color $white
		
		&-lineGreen
			&:after
				background-image url('../img/steps_line_green.png')