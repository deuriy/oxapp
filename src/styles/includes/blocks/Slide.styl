.Slide
	width 1051px
	
	@media $mdMinus
		width 850px
	
	&_wrapper
		position absolute
		top 0
		left 0
		display flex
		-webkit-flex-direction column
		-ms-flex-direction column
		flex-direction column
		-webkit-justify-content space-between
		justify-content space-between
		width 100%
		height 100%
		padding 60px 88px 98px

		@media $smMinus
			padding 5.85vw 8.6vw 9.57vw
		
		@media $xxs
			padding 6vw 7vw 8vw
	
	&_slogan
		font-weight 700
		letter-spacing 0.05em
		text-transform uppercase
		color $green

		@media $mdMinus
			font-size 15px
		
		@media $smMinus
			font-size 1.464vw
		
		@media $xxs
			font-size 2.064vw
	
	&_textWrapper
		max-width 380px

		@media $smMinus
			max-width 37.1vw
		
		@media $xxs
			max-width 53vw
	
	&_title
		margin-bottom 0.65em
		font-weight 700
		font-size 40px
		line-height 1.375
		letter-spacing 0.025em
		text-transform uppercase
		color $white

		@media $mdMinus
			font-size 38px
		
		@media $smMinus
			font-size 3.71vw
		
		@media $xxs
			font-size 5vw
		
		&:after
			content ""
			display block
			width 73px
			height 5px
			margin-top 20px
			background-image -webkit-linear-gradient(90deg, #95d600, #c6d721)
			background-image -o-linear-gradient(90deg, #95d600, #c6d721)
			background-image linear-gradient(90deg, #95d600, #c6d721)
			-webkit-transform skew(-50deg)
			-moz-transform skew(-50deg)
			-ms-transform skew(-50deg)
			-o-transform skew(-50deg)
			transform skew(-50deg)

			@media $xxs
				display none
	
	&_description
		font-size 21px
		line-height 1.48
		color $white

		@media $mdMinus
			font-size 19px
		
		@media $smMinus
			font-size 1.86vw
		
		@media $xxs
			font-size 2.8vw
	
	&-products
		.Slide_img
			text-align center